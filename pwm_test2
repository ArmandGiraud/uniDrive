var piblaster = require("pi-blaster.js");

// setPWM   (  Pi Pin  ,  Demand)
// 17 = throttle
// 18 = steer
// demand = 0-1
// where 1=3.3v and 0=0v

//enter your own constants here

piblaster.setPwm(18, 0.205); //throttle rev
